<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_start_item_guideline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/dimenL"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        style="@style/Default.Text.Main"
        android:id="@+id/fragment_start_item_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimenL"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/fragment_start_item_guideline" />

    <TextView
        style="@style/Default.Text.Support"
        android:id="@+id/fragment_start_item_secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fragment_start_item_primary"
        app:layout_constraintStart_toStartOf="@id/fragment_start_item_guideline" />

</androidx.constraintlayout.widget.ConstraintLayout>