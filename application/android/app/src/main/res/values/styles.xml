<resources>
    <!-- Base application theme. -->
    <style name="Default" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/black</item>

        <item name="booruchanSeparator">@style/Default.Separator</item>
        <item name="booruchanToolbar">@style/Default.Toolbar</item>
        <item name="booruchanProgress">@style/Default.Progress</item>
        <item name="booruchanAutocomplete">@style/Default.Autocomplete</item>
    </style>

    <style name="Default.Toolbar">
        <item name="android:background">@color/background</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionOverflowButtonStyle</item>
    </style>

    <style name="ActionOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/dimmed</item>
    </style>

    <style name="Default.Separator">
        <item name="android:background">@color/separator</item>
    </style>

    <style name="Default.Text">
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="Default.Text.Main">
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>

    <style name="Default.Text.Support">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dimmed</item>
    </style>

    <style name="Default.Progress">
        <item name="android:indeterminateTint">@color/dimmed</item>
    </style>

    <style name="Default.Autocomplete" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/text_outline_states</item>
        <item name="colorPrimary">@color/text</item>
        <item name="hintTextColor">@color/text</item>
    </style>

</resources>