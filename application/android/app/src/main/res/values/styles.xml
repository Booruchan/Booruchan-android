<resources>
    <!-- Base application theme. -->
    <style name="Default" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/black</item>

        <item name="booruchanToolbar">@style/Default.Toolbar</item>
    </style>

    <style name="Default.Toolbar">
        <item name="android:background">@color/background</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
        <item name="android:textColor">@color/text</item>
    </style>
    
    <style name="Default.Separator">
        <item name="android:background">@color/separator</item>
    </style>

    <style name="Default.Text">
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="Default.Text.Main">
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>

    <style name="Default.Text.Support">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dimmed</item>
    </style>

</resources>